{
  "custom/menu": {
    "format": "   ",
    "on-click": "fuzzel --config=$HOME/.config/fuzzel/fuzzel.ini",
    "tooltip": false,
    // "on-click": "$HOME/.config/waybar/scripts/menu",
  },

  "custom/power": {
    "format": "󰐥",
    "on-click": "wlogout --protocol layer-shell",
    "tooltip": false,
    // "on-click": "$HOME/.config/hypr/scripts/wlogout",
  },

  "cpu": {
    "interval": 5,
    "format": "  {usage}%",
  },
  "memory": {
    "interval": 5,
    // "format": "  USED: {used:0.1f}G",
    // "format": "  FREE: {percentage:0.1f}G",
    "format": "  {used:0.1f}G/{total:0.1f}G",
  },
  "disk": {
    "interval": 60,
    // "format": "  {free}/{total}",
    "format": "  {specific_free:0.1f}G",
    "unit": "GB",
  },
  "hyprland/window": {
    // "format": "{}",
    "format": "{class}",
    // "rewrite": {
    //   "(.*) — Mozilla Firefox": "🌎 $1",
    //   "(.*) - fish": "> [$1]",
    // },
    "separate-outputs": true,
  },

  "network": {
    "interval": 10,
    // "interface": "wlan*", // (Optional) To force the use of this interface, set it for netspeed to work
    "format-wifi": "  {essid}",
    "format-ethernet": " {ipaddr}/{cidr}",
    "format-linked": " {ifname} (No IP)",
    "format-disconnected": "睊 Disconnected",
    "format-disabled": "睊 Disabled",
    "format-alt": " {bandwidthUpBits} |  {bandwidthDownBits}",
    "tooltip-format": " {ifname} via {gwaddr}",
  },

  "custom/weather": {
    "format": "{}",
    "format-alt": "{alt}: {}",
    "format-alt-click": "click-right",
    "interval": 1800,
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/weather.sh",
    // "exec": "~/.config/waybar/scripts/weather-2.sh",
    "exec-if": "ping wttr.in -c1",
  },

  "custom/updater": {
    // "format": "  {} ",
    "format": " {}",
    // "exec": "~/.config/waybar/scripts/checkupdates.sh | wc -l",
    // "exec-if": "[[ $(~/.config/waybar/scripts/checkupdates.sh | wc -l) ]]",
    "exec": "checkupdates | wc -l",
    "exec-if": "[[ $(checkupdates | wc -l) ]]",
    "interval": 300,
  },

